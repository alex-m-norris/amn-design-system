{
  "name": "amnor-design-system",
  "private": true,
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "biome lint",
    "lint:fix": "biome check --write",
    "lint:format": "biome format --write",
    "lint:check": "run-s lint:format typecheck",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.6.1",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "npm:rolldown-vite@7.1.15",
    "vite-plugin-dts": "^4.5.4"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm dlx commitlint --edit $1",
    "pre-commit": "pnpm dlx lint-staged"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "pnpm dlx biome check --write --no-errors-on-unmatched --files-ignore-unknown"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.0.0"
}
